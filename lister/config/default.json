{
  "app": {
    "name": "Lister",
    "version": "1.0.4",
    "debug": false
  },
  "security": {
    "enabled": true,
    "max_requests_per_minute": 30,
    "block_duration_seconds": 300,
    "log_suspicious_activity": true
  },
  "display": {
    "items_per_page": 50,
    "show_hidden_files": false,
    "default_sort": "name",
    "sort_direction": "asc"
  },
  "file_hiding": {
    "hide_dotfiles": true,
    "hide_sensitive_files": true,
    "hide_os_cruft": true,
    "hide_app_files": true,
    "sensitive_patterns": [
      ".env",
      "config.php",
      "database.php",
      "secrets.json",
      "private.key",
      "*.pem",
      "*.p12",
      "*.pfx",
      "id_rsa",
      "id_dsa",
      "id_ecdsa",
      "id_ed25519",
      "known_hosts",
      "authorized_keys"
    ],
    "os_cruft_patterns": [
      "Thumbs.db",
      ".DS_Store",
      "desktop.ini",
      "._*",
      ".Spotlight-V100",
      ".Trashes",
      ".fseventsd",
      ".TemporaryItems",
      ".VolumeIcon.icns",
      ".com.apple.timemachine.donotpresent",
      "ehthumbs.db",
      "ehthumbs_vista.db",
      "*.tmp",
      "*.temp"
    ],
    "app_files_patterns": [
      "index.php",
      "lister/"
    ]
  }
}
